@model IEnumerable<CommonLayer.CommonModels.UserModel>

@{
    ViewBag.Title = "Index";
}

<div class="box-header with-border">
    <h3 class="box-title">Users List</h3>
</div>
<br />


<div class="col-lg-12">
    <button value="Create New"
            class="btn btn-primary btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("Create")'">
        Create New
    </button>
</div>
<div class="col-lg-12">
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <td><b>Name</b></td>
                <td><b>Email</b></td>
                <td><b>Contact</b></td>
                <td><b>Area</b></td>
                <td><b>Passowrd</b></td>
            

                <td><b>Edit</b></td>
                <td><b>Details</b></td>
                <td><b>Delete</b></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Contact</td>
                    <td>@item.Area</td>
                    <td>@item.Password</td>
                    @*<td>@item.ConfirmPassword</td>*@

                    <td>
                        <button value="Edit"
                                class="btn btn-primary btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Create", "UserRegistration" ,new {id = item.Id })'">
                            Edit
                        </button>
                    </td>
                    <td>
                        <button value="Details"
                                class="btn btn-info btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Details", "UserRegistration" ,new {id = item.Id })'">
                            Details
                        </button>
                    </td>
                    <td>
                        <button value="Delete"
                                class="btn btn-danger btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Delete", "UserRegistration" ,new {id = item.Id })'">
                            Delete
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


