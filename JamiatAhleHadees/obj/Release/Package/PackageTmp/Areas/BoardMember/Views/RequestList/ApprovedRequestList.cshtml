@model IEnumerable<CommonLayer.CommonModels.RequestSubmitModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>



<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" id="success-alert">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success alert-dismissible ">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4>
                    @TempData["msg"]

                </h4>

            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>
<table class="table">


    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortDesc)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RequestTypeName)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            <strong>Status</strong>
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ShortDesc</td>
            <td>@item.RequestTypeName</td>
            <td>@item.UserName</td>
            @if (item.IsApproved == null)
            {
                <td style="color:orange">Pending</td>
            }
            else if (item.IsApproved == false)
            {
                <td style="color:red">Rejected</td>
            }
            else
            {
                <td style="color:green">Approved</td>
            }
            @*   <td>@item.Comment</td>*@



        </tr>

    }


</table>
