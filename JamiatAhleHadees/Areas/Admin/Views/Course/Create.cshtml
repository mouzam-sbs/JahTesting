@model CommonLayer.CommonModels.CourseModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="box-header with-border">
    <h3 class="box-title">Course</h3>
</div>
<br />



@using (Html.BeginForm("Create", "Course", FormMethod.Post))
{
    <div class="container">
        <div class="col-md-6 col-lg-offset-3">

            <div class="form-group row">
                <label for="example-search-input" class="col-2 col-form-label">Name</label>
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Course Name" })

                </div>
            </div>

            <div class="form-group row">
                <label for="example-search-input" class="col-2 col-form-label">Description</label>
                <div class="col-10">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Description" })

                </div>
            </div>
            <div class="form-group row">
                <label for="example-search-input" class="col-2 col-form-label">Status</label>
                <div class="col-10">
                    @Html.CheckBoxFor(x=>x.Status ,new { @class = "checkbox", @name = "Status" })
                  @*<input type="checkbox" class="checkbox" name="Status" id="Status" />*@

                </div>
            </div>
            <div class="form-group row">

                <div class="col-10">
                    @Html.HiddenFor(x => x.Id)

                </div>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    @if (Model.Id != null && Model.Id != 0)
                    {
                        <button type="submit" class="btn-block btn btn-success" data-id="@Model.Id" id="btnRegisterUpdate">
                            Update
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn-block btn btn-success" data-id="0" id="btnRegister">
                            Submit
                        </button>
                    }
                </div>
                <div class="col-md-3">
                    <button value="Edit"
                            class="btn-block btn btn-danger" type="button" id="addressSearch"
                            onclick="location.href='@Url.Action("Index", "Course")'">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

