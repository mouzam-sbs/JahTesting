@model IEnumerable<CommonLayer.CommonModels.ZoneModel>
@{
    ViewBag.Title = "Index";

}
<div class="box-header with-border">
    <h3 class="box-title">Zone List</h3>
</div>
<br />
<div class="col-lg-12">
    <button value="Create New"
            class="btn btn-primary btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("Create")'">
        Create New
    </button>
</div>
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <td><b>Id</b></td>
            <td><b>Zone Name</b></td>
            <td><b>Edit</b></td>
            <td><b>Details</b></td>
            <td><b>Delete</b></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>

                <td>
                    <button value="Edit"
                            class="btn btn-primary btn-sm" type="button" id="addressSearch"
                            onclick="location.href='@Url.Action("Create", "Zone" ,new {id = item.Id })'">
                        Edit
                    </button>
                </td>
                <td>
                    <button value="Details"
                            class="btn btn-info btn-sm" type="button" id="addressSearch"
                            onclick="location.href='@Url.Action("Details", "Zone" ,new {id = item.Id })'">
                        Details
                    </button>
                </td>
                <td>
                    <button value="Delete"
                            class="btn btn-danger btn-sm" type="button" id="addressSearch"
                            onclick="location.href='@Url.Action("Delete", "Zone" ,new {id = item.Id })'">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
