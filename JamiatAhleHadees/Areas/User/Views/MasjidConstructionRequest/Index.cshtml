@model IEnumerable<CommonLayer.CommonModels.MasjidConstructionRequestModel>

@{
    ViewBag.Title = "Index";

}

<div class="box-header with-border">
    <h3 class="box-title">Masjid Construction List</h3>
</div>
<br />
<div class="col-lg-12">
    <button value="Create New"
            class="btn btn-primary btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("Create")'">
        Create New
    </button>
    </div>
<div class="col-lg-12">
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <td><b>Id</b></td>
                <td><b>Description</b></td>
                <td><b>User Name</b></td>
                <td><b>Location</b></td>
                <td><b>Area</b></td>
                <td><b>Masjid Name</b></td>
                <td><b>AmountNeeded</b></td>
                <td><b>Edit</b></td>
                <td><b>Details</b></td>
                <td><b>Delete</b></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ShortDescription</td>
                    <td>@item.UserName</td>
                    <td>@item.Location</td>
                    <td>@item.Area</td>
                    <td>@item.MasjidName</td>
                    <td>@item.AmountNeeded</td>


                    <td>
                        <button value="Edit"
                                class="btn btn-primary btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Create", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Edit
                        </button>
                    </td>
                    <td>
                        <button value="Details"
                                class="btn btn-info btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Details", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Details
                        </button>
                    </td>
                    <td>
                        <button value="Delete"
                                class="btn btn-danger btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Delete", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
